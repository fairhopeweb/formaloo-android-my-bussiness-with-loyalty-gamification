<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_plz"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/not_login" />

    <TextView
        android:id="@+id/login_plz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:justificationMode="inter_word"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Deal page is for the company users.\n If you are a member, login to your account please."
        android:textAlignment="center"
        android:textColor="?colorOnPrimary"
        android:textSize="18sp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deal_login_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/login_plz"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/teal_700"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>